@model IEnumerable<DelishMe.Web.Models.Dish>

@{

    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Dishes</h2>
<table id="dishes" class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Dish</th>
            <th>Category</th>
        </tr>
    </thead>
    <tbody>
    </tbody>
</table>
@section scripts
{
    <script>$(document).ready(function () {
            var table = $("#dishes").DataTable({
                ajax: {
                    url: "/api/dishes",
                    dataSrc: ""
                },
                columns: [
                    {
                        data: "name",
                        render: function (data, type, dish) {
                            return "<a href='/dishes/details/" + dish.id + "'>" + dish.name + "</a>";
                        }
                    },
                    {
                        data: "category.name" 
                    }
                  
                ]
            }); 
        });</script>
}
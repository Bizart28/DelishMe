@model DelishMe.Web.ViewModels.RandomDishViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{ 
    var className = Model.Customers.Count > 0 ? "popular" : null;
}

<h2 class="@className">@Model.Dish.Name</h2>
@if (Model.Customers.Count == 0)
            {
                <text>Nobody has ordered this Dish yet</text>
            }
else
            {
                <ul>
                    @foreach(var customer in Model.Customers)
                {
                    <li>@customer.Name</li>
                }
                </ul>
            }

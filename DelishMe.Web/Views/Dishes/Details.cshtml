@model DelishMe.Web.Models.Dish
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex justify-content-center align-items-center vh-100">
    <div class="col-md-8 col-lg-6">
        <div class="card shadow-sm border-0 rounded-3 card-bordered">
            <div class="card-header bg-primary text-white rounded-top-3 p-3 text-center">
                <h3 class="card-title mb-0">@Model.Name</h3>
            </div>
            <div class="card-body p-4">
                <div class="mb-3">
                    <h5 class="card-subtitle mb-3 text-muted">Details</h5>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item py-2"><strong>Category:</strong> @Model.Category.Name</li>
                        <li class="list-group-item py-2"><strong>Description:</strong> @Model.Description</li>
                        <li class="list-group-item py-2"><strong>Date Added:</strong> @Model.DateAdded.ToLongDateString()</li>
                    </ul>
                </div>
                @if (!string.IsNullOrEmpty(Model.ImagePath))
                {
                    <div class="text-center mb-3">
                        <img src="@Url.Content(Model.ImagePath)" alt="Dish Image" class="img-fluid rounded shadow-sm dish-image" />
                    </div>
                }
            </div>
            <div class="card-footer bg-light rounded-bottom-3 p-3 text-center">
                <p class="text-muted mb-0">© 2024 DelishMe</p>
            </div>
        </div>
    </div>
</div>
